# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                     controllers.Application.index

# APIs
GET         /loadWar             controllers.WarController.loadReservations
DELETE         /loadWar/:id             controllers.WarController.deleteReservation(id)
GET         /loadNotes             controllers.NoteController.loadNotes
GET         /init             controllers.WarController.initFile
GET         /history             controllers.Application.loadData
POST         /addReservation            controllers.WarController.addReservation(name, number, approvedBy)
POST         /addNote           controllers.NoteController.addNote(name, note, noteBy)
GET         /loadWishes             controllers.Application.loadWishes
POST         /addWish             controllers.Application.addWish(name, number)
POST         /startWar            controllers.WarController.startWar(name, note)

GET         /loadCurrentWarInfo   controllers.Application.loadCurrentWar


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.versioned(path="/public", file: Asset)
GET         /webjars/*file        controllers.WebJarAssets.at(file)

GET     /standard/messages/main               controllers.Messages.main
GET     /standard/messages/list               controllers.Messages.list
GET     /standard/messages/detail/:id         controllers.Messages.detail(id: Int)
GET     /standard/messages/write              controllers.Messages.write

GET     /standard/messages/create             controllers.Messages.createReservations
GET     /standard/messages/clear              controllers.Messages.cleanReservations
GET     /standard/messages/cleartable             controllers.Messages.cleanReservationsTable

GET     /login                                     controllers.Sessions.login
POST    /standard/login                       controllers.Sessions.authenticate
GET     /standard/logout                      controllers.Sessions.logout